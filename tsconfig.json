{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true, // コンパイルしたtsファイルの中でexportしているもの全ての型定義ファイルを出力する
    "sourceMap": true, // ソースマップを出力する
    "outDir": "./dist", // コンパイル結果の出力先を指定
    "esModuleInterop": true, // commonjsとes moduleの相互運用性を有効にする
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true, // デフォルトのエクスポートなしでデフォルトのインポートを許可する
    "moduleResolution": "node",
    "resolveJsonModule": true // jsonファイルからの型の読み込みを許可する
  },
  "include": ["src/**/*.ts"] // ← 追記（コンパイルする対象ファイルの場所を指定
}
